{
  "name": "leaguelogin",
  "version": "1.0.0",
  "description": "Overwolf Electron League Manager",
  "main": "src/main/main.js",
  "scripts": {
    "start": "ow-electron .",
    "build": "ow-electron-builder"
  },
  "author": "Lostgames",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "js-yaml": "^4.1.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@overwolf/ow-electron": "^37.7.0",
    "@overwolf/ow-electron-builder": "^26.0.12",
    "electron": "^39.2.7"
  },
  "build": {
    "appId": "com.lostgames.leaguelogin",
    "productName": "Lost League Manager",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      "resources/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/renderer/assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}